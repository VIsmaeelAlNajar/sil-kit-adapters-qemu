{
    "version": 3,
    "configurePresets": [
        {
            "name": "linux-base",            
            "description": "Target the Windows Subsystem for Linux (WSL) or a remote Linux system.",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/_build/${presetName}",
            "installDir": "${sourceDir}/_install/${presetName}",
            "cacheVariables": {                
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "SILKIT_VERSION": "4.0.17",
                "SILKIT_FLAVOR": "ubuntu-18.04-x86_64-gcc"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}",
                    "rsyncCommandArgs": [ "--exclude", "_build" ]
                }
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",            
            "inherits": "linux-base",            
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }            
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",            
            "inherits": "linux-base",            
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }            
        },
 {
            "name": "windows-base",
            "description": "Target Windows with the Visual Studio development environment.",
            "inherits": "base-env",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "environment": {
                "SILKIT_CMAKE_PRESET_BUILD_PLATFORM": "win"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (Debug)",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "environment": {
                "SILKIT_CMAKE_PRESET_BUILD_TYPE": "Debug",
                "SILKIT_CMAKE_PRESET_ARCHITECTURE": "x64"
            }
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (RelWithDebInfo)",
            "inherits": "x64-debug",
            "environment": {
                "SILKIT_CMAKE_PRESET_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "x86-debug",
            "displayName": "x86 Debug",
            "description": "Target Windows (32-bit) with the Visual Studio development environment. (Debug)",
            "inherits": "windows-base",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "environment": {
                "SILKIT_CMAKE_PRESET_BUILD_TYPE": "Debug",
                "SILKIT_CMAKE_PRESET_ARCHITECTURE": "x86"
            }
        },
        {
            "name": "x86-release",
            "displayName": "x86 Release",
            "description": "Target Windows (32-bit) with the Visual Studio development environment. (RelWithDebInfo)",
            "inherits": "x86-debug",
            "environment": {
                "SILKIT_CMAKE_PRESET_BUILD_TYPE": "Release"
            }
        }
        
    ],

